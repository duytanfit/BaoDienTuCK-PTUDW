{{#section 'css'}}
<link rel="stylesheet"
href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(function () {

        $('#txtDOB').datetimepicker({
            format: 'd/m/Y',
            timepicker: false,
            mask: true,
        });

        $('#frmAddUser').validate({
            rules: {
                username: {
                    required: true
                },
                password: {
                    required: true,
                    minlength: 6
                },
                confirm: {
                    required: true,
                    equalTo: $('[name="password"]')
                },
                name: {
                    required: true,
                },
                email: {
                    required: true,
                    email: true
                },
                permission: {
                    required: true
                }
            },
            messages: {
                username: {
                    required: 'Your username is required.',
                    remote: 'Your username has been taken, please take another.'
                },
                password: {
                    required: 'Your password is required.',
                    minlength: 'Your password must have at least 6 characters.'
                },
                confirm: {
                    required: 'Your password does not match.',
                    equalTo: 'Your password does not match.'
                },
                email: {
                    required: 'Please enter a valid email address.',
                    email: 'Please enter a valid email address.'
                },
                permission: {
                    required: 'Please enter permission.'
                }
            },

            errorElement: 'small',
            errorClass: 'help-block text-danger',
            validClass: 'is-valid',
            highlight: function (e) {
                $(e).removeClass('is-valid').addClass('is-invalid');
            },
            unhighlight: function (e) {
                $(e).removeClass('is-invalid').addClass('is-valid');
            }
        });
    })
</script>
{{/section}}

<div class="card shadow">
    <h4 class="card-header">New User</h4>
    <div class="card-body">
        <form method="POST" id="frmAddUser" novalidate>
            <h5 class="mb-3">Account</h5>
            <div class="form-group">
                <label for="txtusername">Username</label>
                <input required type="text" class="form-control" id="txtUsername" name="username">
            </div>
            <div class="form-group">
                <label for="txtPassword">Password</label>
                <input type="password" class="form-control" id="txtPassword" name="password">
            </div>
            <div class="form-group">
                <label for="txtConfirm">Confirm</label>
                <input type="password" class="form-control" id="txtConfirm" name="confirm">
            </div>
            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="text" class="form-control" id="txtEmail" name="email">
            </div>
            <div class="form-group">
                <label for="txtPermission">Permission</label>
                <input type="text" class="form-control" id="txtPermission" name="permission">
            </div>

            <hr class="mb-4">
            <h5 class="mb-3">Information</h5>
            <div class="form-group">
                <label for="txtFirstName">First Name</label>
                <input type="text" class="form-control" id="txtFirstName" name="firstname">
            </div>
            <div class="form-group">
                <label for="txtLastName">Last Name</label>
                <input type="text" class="form-control" id="txtLastName" name="lastname">
            </div>

            <div class="form-group">
                <label for="txtNickName">Nick Name</label>
                <input type="text" class="form-control" id="txtNickName" name="nickname">
            </div>
            <div class="form-group">
                <label for="txtDOB">Date of birth</label>
                <input type="text" class="form-control" id="txtDOB" name="dob">
            </div>
            <a class="btn btn-primary" href="/admin/user" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                List
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </form>
    </div>
</div>